    </filter-mapping>

    <servlet>
        <servlet-name>AProfServlet</servlet-name>
        <servlet-class>servlets.AProfServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AProfServlet</servlet-name>
        <url-pattern>/a-myprofile</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AProfFilter</filter-name>
        <filter-class>filters.AProfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AProfFilter</filter-name>
        <url-pattern>/a-myprofile</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>MPServlet</servlet-name>
        <servlet-class>servlets.MPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MPServlet</servlet-name>
        <url-pattern>/myprofile</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MPFilter</filter-name>
