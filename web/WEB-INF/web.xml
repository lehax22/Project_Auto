    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>servlets.RegServlet</servlet-class>
