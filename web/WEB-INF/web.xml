        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainSerlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MainFilter</filter-name>
        <filter-class>filters.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MainFilter</filter-name>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ArtServlet</servlet-name>
        <servlet-class>servlets.ArtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArtServlet</servlet-name>
